<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="20%p"
    android:horizontalGap="0dp"
    android:verticalGap="0dp"
    android:keyHeight="@dimen/key_height"
    android:isRepeatable="false">

    <!-- actual keymap is defined in KeymapController.kt -->

    <Row android:keyHeight="5dp"/>
    <Row android:keyHeight="2dp">
        <!-- Flick Indicator -->
        <Key
            android:codes="0"
            android:keyWidth="100%p"/>
    </Row>

    <Row>
        <Key
            android:codes="1"
            android:keyIcon="@drawable/keyicon01"
            android:keyEdgeFlags="left">
        </Key>
        <Key
            android:codes="2"
            android:keyIcon="@drawable/keyicon02"
            android:isRepeatable="false">
        </Key>
        <Key
            android:codes="3"
            android:keyIcon="@drawable/keyicon03">
        </Key>
        <Key
            android:codes="4"
            android:keyIcon="@drawable/keyicon04">
        </Key>
        <Key
            android:codes="5"
            android:keyIcon="@drawable/keyicon05"
            android:keyEdgeFlags="right">
        </Key>
    </Row>
    <Row>
        <Key
            android:codes="6"
            android:keyLabel="m/a"
            android:keyEdgeFlags="left">
        </Key>
        <Key
            android:codes="7"
            android:keyIcon="@drawable/keyicon07">
        </Key>
        <Key
            android:codes="8"
            android:keyIcon="@drawable/keyicon08">
        </Key>
        <Key
            android:codes="9"
            android:keyIcon="@drawable/keyicon09">
        </Key>
        <Key
            android:codes="10"
            android:keyIcon="@drawable/keyicon10"
            android:isRepeatable="true"
            android:keyEdgeFlags="right">
        </Key>
    </Row>
    <Row>
        <Key
            android:codes="11"
            android:keyLabel="c/a"
            android:keyEdgeFlags="left">
        </Key>
        <Key
            android:codes="12"
            android:keyIcon="@drawable/keyicon12">
        </Key>
        <Key
            android:codes="13"
            android:keyIcon="@drawable/keyicon13">
        </Key>
        <Key
            android:codes="14"
            android:keyIcon="@drawable/keyicon14">
        </Key>
        <Key
            android:codes="15"
            android:keyIcon="@drawable/keyicon15"
            android:isRepeatable="true"
            android:keyEdgeFlags="right">
        </Key>
    </Row>
    <Row>
        <Key
            android:codes="16"
            android:keyIcon="@drawable/keyicon16"
            android:keyEdgeFlags="left">
        </Key>
        <Key
            android:codes="17"
            android:keyIcon="@drawable/keyicon17">
        </Key>
        <Key
            android:codes="18"
            android:keyIcon="@drawable/keyicon18">
        </Key>
        <Key
            android:codes="19"
            android:keyIcon="@drawable/keyicon19">
        </Key>
        <Key
            android:codes="20"
            android:keyIcon="@drawable/keyicon20"
            android:keyEdgeFlags="right">
        </Key>
    </Row>
    <Row
        android:rowEdgeFlags="bottom"
        android:keyHeight="8dp"/>

</Keyboard>
